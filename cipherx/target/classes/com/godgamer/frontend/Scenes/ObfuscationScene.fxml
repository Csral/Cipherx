<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.godgamer.frontend.ObfuscationSceneController">
   <children>
      <!-- Title Label -->
      <Label alignment="CENTER" layoutX="200.0" layoutY="17.0" prefHeight="25.0" prefWidth="250.0" text="Obfuscation Tool" style="-fx-font-weight: bold;">
         <font>
            <Font size="16.0" />
         </font>
      </Label>

      <!-- Back Button -->
      <Button id="backBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backToMain" text="Back" />

      <!-- Input Pane -->
      <Pane id="InputPane" layoutX="74.0" layoutY="60.0" prefHeight="50.0" prefWidth="550.0">
         <children>
            <TextField fx:id="inputTB" layoutX="0.0" layoutY="0.0" prefHeight="25.0" prefWidth="446.0" promptText="Enter Text or File Path to Obfuscate" />
            <Button id="browseBtn" fx:id="browseBtn" layoutX="456.0" layoutY="0.0" mnemonicParsing="false" onAction="#getFilePath" text="Browse" />
         </children>
      </Pane>

      <!-- String/File Toggle -->
      <CheckBox id="stringCB" layoutX="74.0" layoutY="115.0" mnemonicParsing="false" onAction="#toggleInputType" text="Input is String (Uncheck for File)">
         <font>
            <Font size="13.0" />
         </font>
      </CheckBox>

      <!-- Obfuscation Technique Selection -->
      <Label layoutX="74.0" layoutY="150.0" text="Obfuscation Technique">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <ChoiceBox id="obfuscationTechniqueCombo" fx:id="obfuscationTechniqueCombo" layoutX="230.0" layoutY="146.0" prefWidth="250.0">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Base64 Encoding" />
               <String fx:value="Hexadecimal Encoding" />
               <String fx:value="Reverse String" />
               <String fx:value="Custom Algorithm" />
            </FXCollections>
         </items>
      </ChoiceBox>

      <!-- Advanced Options ScrollPane -->
      <ScrollPane id="advScrollPane" fx:id="scrollPanel" layoutX="74.0" layoutY="190.0" prefHeight="150.0" prefWidth="550.0">
         <content>
            <VBox fx:id="scrollContentBox" prefHeight="300.0" prefWidth="530.0">
               <children>
                  <Label text="Advanced Options Placeholder" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
      <Label layoutX="74.0" layoutY="170.0" text="Advanced Options">
         <font>
            <Font size="13.0" />
         </font>
      </Label>

      <!-- Execute Button -->
      <Button id="executeBtn" layoutX="274.0" layoutY="350.0" mnemonicParsing="false" onAction="#executeObfuscation" text="Execute" />

      <!-- Dark Mode RadioButton -->
      <CheckBox layoutX="550.0" layoutY="18.0" mnemonicParsing="false" onAction="#changeMode" text="Dark Mode">
         <font>
            <Font size="13.0" />
         </font>
      </CheckBox>
   </children>
